<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.antsiferov.converter.SettingsActivity"
    android:theme="@android:style/Theme.Dialog"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="@string/setting_red"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/tvRed" />

        <SeekBar
            android:layout_width="235dp"
            android:max="255"
            android:progress="0"
            android:layout_height="wrap_content"
            android:id="@+id/sbRed" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="@string/setting_green"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/tvGreen" />

        <SeekBar
            android:layout_width="235dp"
            android:max="255"
            android:progress="0"
            android:layout_height="wrap_content"
            android:id="@+id/sbGreen" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/setting_blue"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/tvBlue" />

        <SeekBar
            android:layout_width="235dp"
            android:max="255"
            android:progress="0"
            android:layout_height="wrap_content"
            android:id="@+id/sbBlue" />
    </LinearLayout>
</LinearLayout>
